<StatusMessage Message="@StatusMessage" />
<h3>
    @_localizer["Recovery codes"]
</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <strong>@_localizer["Put these codes in a safe place."]</strong>
    </p>
    <p>
        @_localizer["If you lose your recovery codes, you will not be able to recover your account."]
    </p>
</div>
<FluentGrid>
    <FluentGridItem sm="12">
        @foreach (var recoveryCode in RecoveryCodes) {
            <div>
                <code class="recovery-code">@recoveryCode</code>
            </div>
        }
    </FluentGridItem>
</FluentGrid>